   "clock": {
      "format": "{:%Y-%m-%d %H:%M:%S}",
      "interval": 1,
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "cpu": {
      "format": "CPU: {usage}%",
      "width": 20,
