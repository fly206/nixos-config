    },
    "custom/brightness": {
      "exec": "ddcutil --bus 9 getvcp 10 | grep -oP 'current.*?=\\s*\\K[0-9]+' | { read x; echo '{\"percentage\":'${x}'}'; }",
      "format": "BR: {percentage}%",
      "interval": 1,
      "on-click": "ddcutil --noverify --bus 9 setvcp 10 + 5",
      "on-click-right": "ddcutil --noverify --bus 9 setvcp 10 - 5",
      "return-type": "json",
      "tooltip": false
    },
    "height": 30,
    "hyparland/window": {
      "format": "{}"
    },
    "layer": "top",
    "memory": {
      "format": "MEM: {}%"
    },
